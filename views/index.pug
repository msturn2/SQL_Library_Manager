extends layout

block content
  h1= title
  
  include ./includes/search-form

  table
    thead 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year 
    tbody 
      each book in books
        tr 
          td 
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre 
          td= book.year
  div.pagination
  
    include ./includes/pagination
